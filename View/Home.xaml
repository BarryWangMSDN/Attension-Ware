<Page
    x:Class="AttWare.View.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AttWare.View"
    xmlns:control="using:AttWare.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <CalendarView Grid.Row="0" HorizontalAlignment="Left" HorizontalDayItemAlignment="Center" MaxWidth="598" MaxHeight="300"/>
        <control:WeekView Grid.Row="1"/>
      
       
        
    </Grid>
</Page>
